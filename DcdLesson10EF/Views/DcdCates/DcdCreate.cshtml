@model DcdLesson10EF.Models.Cate

@{
    ViewData["Title"] = "Them Moi Danh Muc Loai";
}




<div class="row">
    <div class="col-md-4">
        <form asp-action="DcdCreate">
            <div class="card">
                <div class="card-header">
                    <h1>@ViewData["Title"]</h1>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="CateId" class="control-label"></label>
                        <input asp-for="CateId" class="form-control" />
                        <span asp-validation-for="CateId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CateName" class="control-label"></label>
                        <input asp-for="CateName" class="form-control" />
                        <span asp-validation-for="CateName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CateStatus" class="control-label"></label>
                        <input asp-for="CateStatus" class="form-control" />
                        <span asp-validation-for="CateStatus" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <input type="submit" value="Ghi Lai" class="btn btn-primary" name="btnDcdCreate" />

                        <a asp-action="DcdIndex">Back to List</a>
                    </div>
                </div>
            </div>
         
           
           
        </form>
    </div>
</div>






@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
