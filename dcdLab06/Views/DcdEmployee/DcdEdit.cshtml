@model dcdLab06.Models.DcdEmployee
@{
    ViewData["Title"] = "Chỉnh sửa nhân viên";
}

<h2>Chỉnh sửa nhân viên</h2>

<form asp-action="DcdEditPUT" method="post">
    <input type="hidden" asp-for="DcdId" />

    <div class="form-group">
        <label>Họ tên</label>
        <input asp-for="DcdName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ngày sinh</label>
        <input asp-for="DcdBirthday" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="DcdEmail" class="form-control" />
    </div>

    <div class="form-group">
        <label>Điện thoại</label>
        <input asp-for="DcdPhone" class="form-control" />
    </div>

    <div class="form-group">
        <label>Lương</label>
        <input asp-for="DcdSalary" class="form-control" />
    </div>

    <div class="form-group">
        <label>Trạng thái</label>
        <input asp-for="DcdStatus" type="checkbox" />
    </div>

    <button type="submit" class="btn btn-success">Cập nhật</button>
    <a class="btn btn-secondary" asp-action="DcdIndex">Quay lại</a>
</form>
