@model dcdLab06.Models.DcdEmployee
@{
    ViewData["Title"] = "Them moi nhan vien";
}
<form asp-action="DcdCreateSubmit" method="post">
    <div class="form-group">
        <label>Họ tên</label>
        <input asp-for="DcdName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ngày sinh</label>
        <input asp-for="DcdBirthday" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="DcdEmail" class="form-control" />
    </div>
    <div class="form-group">
        <label>Điện thoại</label>
        <input asp-for="DcdPhone" class="form-control" />
    </div>
    <div class="form-group">
        <label>Lương</label>
        <input asp-for="DcdSalary" class="form-control" />
    </div>
    <div class="form-group">
        <label>Trạng thái</label>
        <input asp-for="DcdStatus" type="checkbox" />
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="DcdIndex" class="btn btn-secondaty">Quay lai</a>
</form>